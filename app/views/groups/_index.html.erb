<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_profile_image, size: '50x50' %></td>
        <td>
          <%= link_to group_path(group.id) do %>
          <%= group.name %>
          <% end %>
        </td>
        <td><%= group.introduction %></td>
        <td>
            <%= group.users.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
